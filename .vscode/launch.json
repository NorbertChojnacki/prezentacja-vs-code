    "version": "0.2.0",
    "configurations": [
        {
            "name": "lunch localhost",
            "request": "launch",
            "type": "chrome",
            "url":"http://localhost:8080",
            "webRoot": "${workspaceFolder}/app/html"
        },
        {
            "name": "Launch snippets",
            "type": "chrome",
            "request": "launch",
            "file":"${workspaceFolder}/app/html/snippets.html"
        },
        {
            "name": "Test Average.js",
            "program": "${workspaceFolder}\\app\\averageCalc\\average.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "args": ["run", "debug"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test App.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js"
        }
    ]
}